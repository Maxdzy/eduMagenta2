<?xml version="1.0"?>
<!--
/**
 * @category    Edu
 * @package     Edu\StoreFinderCompletion
 * @author      Maxim Dzyuba <maxim.d@tdo.kz>
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Interfaces -->
    <preference for="Edu\StoreFinderCompletion\Api\StoreRepositoryInterface"
                type="Edu\StoreFinderCompletion\Model\StoreRepository" />
    <preference for="Edu\StoreFinderCompletion\Api\EventRepositoryInterface"
                type="Edu\StoreFinderCompletion\Model\EventRepository" />
    <preference for="Edu\StoreFinderCompletion\Api\Import\OutputInterface"
                type="Edu\StoreFinderCompletion\Import\Output"/>
    <preference for="Edu\StoreFinderCompletion\Api\Import\Store\ValidationInterface"
                type="Edu\StoreFinderCompletion\Import\Store\Validation"/>
    <preference for="Edu\StoreFinderCompletion\Api\Import\StoreInterface"
                type="Edu\StoreFinderCompletion\Import\Store"/>

    <!-- Image Uploader -->
    <virtualType name="ScandiwebStoreFinderImageUploader" type="Magento\Catalog\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">store_finder/tmp/stores</argument>
            <argument name="basePath" xsi:type="string">store_finder/stores</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Edu\StoreFinderCompletion\Controller\Adminhtml\Stores\ImageUpload">
        <arguments>
            <argument name="imageUploader" xsi:type="object">ScandiwebStoreFinderImageUploader</argument>
        </arguments>
    </type>
    <type name="Edu\StoreFinderCompletion\Controller\Adminhtml\Stores\Save">
        <arguments>
            <argument name="imageUploader" xsi:type="object">ScandiwebStoreFinderImageUploader</argument>
        </arguments>
    </type>
    <type name="Edu\StoreFinderCompletion\Model\ResourceModel\Store\FileInfo">
        <arguments>
            <argument name="urlBuilder" xsi:type="object">Magento\Framework\Url</argument>
        </arguments>
    </type>
    <!-- Grid elements -->
    <virtualType name="StoreFinderStoreFilterPool"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular"
                      xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext"
                      xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="StoreFinderEventFilterPool"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular"
                      xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext"
                      xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="StoreFinderRsvpFilterPool"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular"
                      xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext"
                      xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="StoreFinderStoreDataProvider"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object"
                      shared="false">Edu\StoreFinderCompletion\Model\ResourceModel\Store\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">StoreFinderStoreFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="StoreFinderEventDataProvider"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object"
                      shared="false">Edu\StoreFinderCompletion\Model\ResourceModel\Event\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">StoreFinderEventFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="StoreFinderRsvpDataProvider"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object"
                      shared="false">Edu\StoreFinderCompletion\Model\ResourceModel\Rsvp\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">StoreFinderRsvpFilterPool</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="storefinder_stores_listing_data_source"
                      xsi:type="string">Edu\StoreFinderCompletion\Model\ResourceModel\Store\Grid\Collection</item>
                <item name="storefinder_events_listing_data_source"
                      xsi:type="string">Edu\StoreFinderCompletion\Model\ResourceModel\Event\Grid\Collection</item>
                <item name="storefinder_rsvp_listing_data_source"
                      xsi:type="string">Edu\StoreFinderCompletion\Model\ResourceModel\Rsvp\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <!-- Other -->
    <type name="Edu\StoreFinderCompletion\Model\Source\Stores">
        <arguments>
            <argument name="storeCollection" xsi:type="object"
                      shared="false">Edu\StoreFinderCompletion\Model\ResourceModel\Store\Collection</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="storesImportCommand"
                      xsi:type="object">Edu\StoreFinderCompletion\Console\Command\StoreImportCommand</item>
            </argument>
        </arguments>
    </type>
</config>
