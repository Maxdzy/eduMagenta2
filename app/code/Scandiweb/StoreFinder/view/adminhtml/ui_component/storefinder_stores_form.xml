<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">storefinder_stores_form.storefinder_stores_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue"
                    class="Scandiweb\StoreFinder\Block\Adminhtml\Store\Form\SaveAndContinueButton"/>
            <button name="save" class="Scandiweb\StoreFinder\Block\Adminhtml\Store\Form\SaveButton"/>
            <button name="reset" class="Scandiweb\StoreFinder\Block\Adminhtml\Store\Form\ResetButton"/>
            <button name="delete" class="Scandiweb\StoreFinder\Block\Adminhtml\Store\Form\DeleteButton"/>
            <button name="back" class="Scandiweb\StoreFinder\Block\Adminhtml\Store\Form\BackButton"/>
        </buttons>
        <namespace>storefinder_stores_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>storefinder_stores_form.storefinder_stores_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="storefinder_stores_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="storefinder/stores/save"/>
            <updateUrl path="storefinder/stores/edit"/>
        </settings>
        <dataProvider class="Scandiweb\StoreFinder\Model\ResourceModel\Store\DataProvider"
                      name="storefinder_stores_form_data_source">
            <settings>
                <requestFieldName>store_id</requestFieldName>
                <primaryFieldName>store_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="store_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>store_id</dataScope>
            </settings>
        </field>
        <field name="store_name" formElement="input" sortOrder="10">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Store Name</label>
                <dataScope>store_name</dataScope>
            </settings>
        </field>
        <field name="identifier" formElement="input" sortOrder="15">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Identifier</label>
                <dataScope>identifier</dataScope>
            </settings>
        </field>
        <field name="position" formElement="input" sortOrder="20">
            <settings>
                <dataType>number</dataType>
                <label translate="true">Store Position</label>
                <dataScope>position</dataScope>
            </settings>
        </field>
        <field name="is_active" formElement="select">
            <settings>
                <dataType>number</dataType>
                <label translate="true">Is Active?</label>
                <visible>true</visible>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Scandiweb\StoreFinder\Model\IsActive"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="image" formElement="fileUploader" sortOrder="20">
            <settings>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Image</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <required>false</required>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="storefinder/stores/imageUpload"/>
                        </uploaderConfig>
                    </settings>
                </fileUploader>
            </formElements>
        </field>
        <field name="address" formElement="textarea" sortOrder="30">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Store Address</label>
                <dataScope>address</dataScope>
            </settings>
        </field>
        <field name="custom_directions_url" formElement="input" sortOrder="40">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Directions URL</label>
                <dataScope>custom_directions_url</dataScope>
            </settings>
        </field>
        <field name="latitude" formElement="input" sortOrder="50">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Latitude</label>
                <dataScope>latitude</dataScope>
            </settings>
        </field>
        <field name="longitude" formElement="input" sortOrder="60">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Longitude</label>
                <dataScope>longitude</dataScope>
            </settings>
        </field>
        <field name="phone_number" formElement="input" sortOrder="70">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Phone Number</label>
                <dataScope>phone_number</dataScope>
            </settings>
        </field>
        <field name="has_store_page" formElement="select">
            <settings>
                <dataType>number</dataType>
                <label translate="true">More Info Enabled</label>
                <visible>true</visible>
                <dataScope>has_store_page</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="number">0</item>
                                <item name="label" xsi:type="string" translate="true">No</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="number">1</item>
                                <item name="label" xsi:type="string" translate="true">Yes</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="page_options">
        <settings>
            <label>More Info (Store Page)</label>
        </settings>
        <field name="description" formElement="textarea" sortOrder="10">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </field>
        <field name="extra_image[0]" formElement="fileUploader" sortOrder="15">
            <settings>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Extra Image 1</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <required>false</required>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="storefinder/stores/imageUpload"/>
                        </uploaderConfig>
                    </settings>
                </fileUploader>
            </formElements>
        </field>
        <field name="extra_image[1]" formElement="fileUploader" sortOrder="17">
            <settings>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Extra Image 2</label>
                <visible>true</visible>
                <required>false</required>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <required>false</required>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="storefinder/stores/imageUpload"/>
                        </uploaderConfig>
                    </settings>
                </fileUploader>
            </formElements>
        </field>
        <field name="manager_name" formElement="input" sortOrder="20">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Manager Name</label>
                <dataScope>manager_name</dataScope>
            </settings>
        </field>
        <field name="manager_phone" formElement="input" sortOrder="30">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Manager Phone</label>
                <dataScope>manager_phone</dataScope>
            </settings>
        </field>
        <field name="manager_email" formElement="input" sortOrder="40">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Manager Email</label>
                <dataScope>manager_email</dataScope>
            </settings>
        </field>
        <field name="store_email" formElement="input" sortOrder="50">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Store Email</label>
                <dataScope>store_email</dataScope>
            </settings>
        </field>
        <field name="store_hours" template="ui/form/field" sortOrder="60" formElement="wysiwyg">
            <settings>
                <label translate="true">Store Hours</label>
                <dataScope>store_hours</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <rows>12</rows>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="additional_info" template="ui/form/field" sortOrder="70" formElement="wysiwyg">
            <settings>
                <label translate="true">Additional Info</label>
                <dataScope>additional_info</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <rows>12</rows>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="store_type" formElement="select" sortOrder="80">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Store Type</label>
                <dataScope>store_type</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Scandiweb\StoreFinder\Model\Source\StoreType"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="country" formElement="select" sortOrder="90">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Country</label>
                <dataScope>country</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Scandiweb\StoreFinder\Model\Source\StoreCountries"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
