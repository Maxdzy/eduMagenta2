<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">storefinder_events_form.storefinder_events_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue"
                    class="Scandiweb\StoreFinder\Block\Adminhtml\Event\Form\SaveAndContinueButton"/>
            <button name="save" class="Scandiweb\StoreFinder\Block\Adminhtml\Event\Form\SaveButton"/>
            <button name="reset" class="Scandiweb\StoreFinder\Block\Adminhtml\Event\Form\ResetButton"/>
            <button name="delete" class="Scandiweb\StoreFinder\Block\Adminhtml\Event\Form\DeleteButton"/>
            <button name="back" class="Scandiweb\StoreFinder\Block\Adminhtml\Event\Form\BackButton"/>
        </buttons>
        <namespace>storefinder_events_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>storefinder_events_form.storefinder_events_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="storefinder_events_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="storefinder/events/save"/>
            <updateUrl path="storefinder/events/edit"/>
        </settings>
        <dataProvider class="Scandiweb\StoreFinder\Model\ResourceModel\Event\DataProvider"
                      name="storefinder_events_form_data_source">
            <settings>
                <requestFieldName>event_id</requestFieldName>
                <primaryFieldName>event_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="event_id" formElement="input">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>event_id</dataScope>
            </settings>
        </field>
        <field name="event_name" formElement="input" sortOrder="10">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Event Name</label>
                <dataScope>event_name</dataScope>
            </settings>
        </field>
        <field name="event_location" formElement="input" sortOrder="40">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Event Location</label>
                <dataScope>event_location</dataScope>
            </settings>
        </field>
        <field name="datetime_start" formElement="date">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Event Start</label>
            </settings>
            <formElements>
                <date>
                    <settings>
                        <options>
                            <option name="showsTime" xsi:type="boolean">true</option>
                            <option name="dateFormat" xsi:type="string">MMM d, YYYY</option>
                        </options>
                    </settings>
                </date>
            </formElements>
        </field>
        <field name="datetime_end" formElement="date">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Event End</label>
            </settings>
            <formElements>
                <date>
                    <settings>
                        <options>
                            <option name="showsTime" xsi:type="boolean">true</option>
                            <option name="dateFormat" xsi:type="string">MMM d, YYYY</option>
                        </options>
                    </settings>
                </date>
            </formElements>
        </field>
        <field name="custom_time" formElement="input">
            <settings>
                <notice translate="true">Show custom time (e.g. "All day"). If left empty, times from "Event Start" and "Event End" will be used.</notice>
                <dataType>text</dataType>
                <label translate="true">Custom Time</label>
                <dataScope>custom_time</dataScope>
            </settings>
        </field>
        <field name="additional_info" template="ui/form/field" formElement="wysiwyg">
            <settings>
                <label translate="true">Additional Info</label>
                <dataScope>additional_info</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <rows>12</rows>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="rsvp_options[rsvp_enabled]" formElement="select" sortOrder="30">
            <settings>
                <dataType>number</dataType>
                <label translate="true">RSVP Enabled</label>
                <dataScope>rsvp_options[rsvp_enabled]</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="number">0</item>
                                <item name="label" xsi:type="string" translate="true">Disabled</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="number">1</item>
                                <item name="label" xsi:type="string" translate="true">Enabled</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="store_ids" formElement="multiselect">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Stores</label>
                <dataScope>store_ids</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Scandiweb\StoreFinder\Model\Source\Stores"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
    </fieldset>
</form>
