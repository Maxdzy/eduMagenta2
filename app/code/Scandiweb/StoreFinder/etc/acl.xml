<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin" title="Magento Admin" sortOrder="20">
                <resource id="Scandiweb_Core::all" title="Scandiweb" sortOrder="0">
                    <resource id="Scandiweb_StoreFinder::store_finder" title="Store Finder" sortOrder="0">
                        <resource id="Scandiweb_StoreFinder::view_store"
                                  title="View Stores" sortOrder="10" />
                        <resource id="Scandiweb_StoreFinder::edit_store"
                                  title="Edit Stores" sortOrder="20" />
                        <resource id="Scandiweb_StoreFinder::delete_store"
                                  title="Delete Stores" sortOrder="30" />
                        <resource id="Scandiweb_StoreFinder::events"
                                  title="Store Finder: Events" sortOrder="100">
                            <resource id="Scandiweb_StoreFinder::view_event"
                                      title="View Events" sortOrder="10" />
                            <resource id="Scandiweb_StoreFinder::edit_event"
                                      title="Edit Events" sortOrder="20" />
                            <resource id="Scandiweb_StoreFinder::delete_event"
                                      title="Delete Events" sortOrder="30" />
                        </resource>
                        <resource id="Scandiweb_StoreFinder::rsvp"
                                  title="Store Finder: Event RSVP" sortOrder="200" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>