<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Scandiweb_StoreFinder::css/store-details.css"/>
    </head>
    <body>
        <referenceBlock name="page.main.title" remove="true" />
        <referenceContainer name="content">
            <block name="storefinder.store"
                   class="Scandiweb\StoreFinder\Block\StoreDetailsPage"
                   template="Scandiweb_StoreFinder::store_details_page.phtml" />
            <block name="event.rsvp.modal"
                   class="Scandiweb\StoreFinder\Block\RsvpPopup"
                   template="Scandiweb_StoreFinder::events/rsvp_popup.phtml"
                   after="storefinder.store"/>
        </referenceContainer>
    </body>
</page>
