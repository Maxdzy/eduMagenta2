<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Scandiweb_StoreFinder::css/list-page.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block name="storefinder.list"
                   class="Scandiweb\StoreFinder\Block\ListPage"
                   template="Scandiweb_StoreFinder::list_page.phtml">
                <arguments>
                    <argument name="list" xsi:type="string">stores</argument>
                </arguments>
                <block name="storefinder.list.stores"
                       class="Scandiweb\StoreFinder\Block\StoreList"
                       template="Scandiweb_StoreFinder::stores/store_list.phtml"/>
                <block name="storefinder.list.events"
                       class="Scandiweb\StoreFinder\Block\EventList"
                       template="Scandiweb_StoreFinder::events/event_list.phtml"/>
            </block>
            <block name="event.rsvp.modal"
                   class="Scandiweb\StoreFinder\Block\RsvpPopup"
                   template="Scandiweb_StoreFinder::events/rsvp_popup.phtml"
                   after="storefinder.list"/>
        </referenceContainer>
    </body>
</page>
